# ==========================================
# .env.example - Laravel Configuration
# ==========================================

APP_NAME="Laravel K8s Demo"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# Cache Configuration (Redis)
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Swoole Configuration (for Octane)
OCTANE_SERVER=swoole
SWOOLE_HOST=0.0.0.0
SWOOLE_PORT=8000
SWOOLE_WORKERS=4
SWOOLE_TASK_WORKERS=4
SWOOLE_MAX_REQUEST=500

# Monitoring & Health
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_NAMESPACE=laravel_app

# Performance Settings
OPCACHE_ENABLED=true
PHP_FPM_MAX_CHILDREN=20
PHP_FPM_MAX_REQUESTS=500
